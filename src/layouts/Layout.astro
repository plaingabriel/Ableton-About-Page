---
import NavBar from "@components/NavBar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <NavBar />
    </header>
    <slot />
  </body>
</html>

<style is:global>
  @import url("/fonts/futura/Futura.css");

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  :root {
    font-size: 16px;
    --yellow: #fbffa7;
    --orange: #ff764d;
    --light-blue: #b1c5ff;
    --purple: #d5b3ff;
    --green: #b6ffc0;
    --full-blue: #0000ff;
  }

  @media screen and (max-width: 1100px) {
    :root {
      font-size: 13px;
    }
  }

  body {
    font-family: "Futura PT Book", sans-serif;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  li {
    list-style-type: none;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-size: 1rem;
    font-weight: normal;
    text-wrap: balance;
  }

  h1 {
    font-size: 3rem;
  }

  h2 {
    font-size: 2.4rem;
  }

  h3 {
    font-size: 2rem;
  }

  h4 {
    font-size: 1.6rem;
  }

  h5 {
    font-size: 1.3rem;
  }

  h6 {
    font-size: 1.1rem;
  }

  p {
    text-wrap: pretty;
    line-height: 1.5rem;
  }

  header {
    border-bottom: 2px solid #f3f3f3;
    padding: 20px 0;
  }
</style>
